<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profiles</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white p-8 rounded-lg shadow-lg text-center w-full max-w-6xl">
      <h2 class="text-3xl font-bold mb-8">User Profiles</h2>
      <% if (users.length === 0) { %>
      <p class="text-gray-700">No data available</p>
      <% } else { %>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8"
      >
        <% users.forEach(user => { %>
        <div
          class="bg-gray-200 p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300"
        >
          <a href="/user/<%= user._id %>">
            <img
              class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"
              src="<%= user.profileImage %>"
              alt="User Image"
            />
            <h3 class="text-xl font-semibold"><%= user.username %></h3>
          </a>
        </div>
        <% }) %>
      </div>
      <% } %>
      <div class="mt-8">
        <a
          href="/register"
          class="inline-block px-6 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition duration-300"
        >
          Register
        </a>
      </div>
    </div>
  </body>
</html>
